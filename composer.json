{
    "name": "jdz/cssmaker",
    "type": "library",
    "description": "Build minified css file from less sources",
    "keywords": [
        "less2css",
        "less2c",
        "stylesheet merger",
        "css maker"
    ],
    "homepage": "https://jdz.joffreydemetz.com/cssmaker/",
    "license": "MIT",
    "authors": [
        {
            "name": "Joffrey Demetz",
            "email": "joffrey.demetz@gmail.com",
            "homepage": "https://joffreydemetz.com",
            "role": "Lead"
        }
    ],
    "require": {
        "php": ">=8.1",
        "jdz/output": "^1.0",
        "jdz/data": "^1.0",
        "symfony/yaml": "^7.2",
        "symfony/process": "^7.2"
    },
    "require-dev": {
        "jdz/fontmanager": "^1.0",
        "phpunit/phpunit": "^10.0"
    },
    "suggest": {
        "jdz/fontmanager": "To manage local fonts and fontfaces"
    },
    "autoload": {
        "psr-4": {
            "JDZ\\CssMaker\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JDZ\\CssMaker\\Tests\\": "tests"
        }
    },
    "scripts": {
        "npm:local": [
            "npm install less",
            "npm install postcss postcss-cli autoprefixer postcss-safe-parser postcss-discard-comments",
            "npm install minify"
        ],
        "npm:global": [
            "npm install -g less",
            "npm install -g postcss postcss-cli autoprefixer postcss-safe-parser postcss-discard-comments",
            "npm install -g minify"
        ],
        "test": [
            "@npm:local",
            "phpunit"
        ],
        "test:cssmaker": "phpunit tests/CssMakerTest.php",
        "test:cleaner": "phpunit tests/CssMakerCleanerTest.php",
        "test:variables": "phpunit tests/CssMakerVariablesTest.php",
        "test:merger": "phpunit tests/CssMakerMergerTest.php",
        "example": [
            "@npm:local",
            "php examples/example.php"
        ]
    }
}